{
  "appId": "com.profilemanagerpro.app",
  "productName": "Profile Manager Pro",
  "electronVersion": "33.0.0",
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "BOHDAID",
    "repo": "profile-creator-suite"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerLanguages": ["ar", "en_US"],
    "shortcutName": "Profile Manager Pro"
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
}