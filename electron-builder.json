{
  "appId": "com.browsermanager.app",
  "productName": "Browser Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerLanguages": ["ar", "en_US"]
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
}
